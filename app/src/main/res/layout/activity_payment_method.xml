<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#001B38"
    android:orientation="vertical"
    tools:context=".PaymentMethod">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <!-- Isi Spinner Bioskop -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pilih Bioskop"
            android:textColor="@color/white"
            android:fontFamily="@font/poppin"/>

        <Spinner
            android:id="@+id/spinBioskop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:backgroundTint="@color/abuterang"
            android:layout_marginBottom="10dp"
            />

        <!-- Isi Spinner Seat -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pilih Jenis Seat"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppin"/>

        <Spinner
            android:id="@+id/spinSeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:backgroundTint="@color/abuterang"
            android:layout_marginBottom="10dp"
            />

        <!-- Isi DatePicker -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pilih Tanggal"
            android:fontFamily="@font/poppin"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <DatePicker
            android:id="@+id/datePick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:calendarViewShown="false"
            android:background="@drawable/shape"
            android:backgroundTint="@color/abuterang"
            android:datePickerMode="calendar">
        </DatePicker>

        <!-- Isi Seat Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <!-- Isi Seat -->
            <LinearLayout
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/seat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Regular Seat"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppin"/>
            </LinearLayout>

            <!-- Isi Price Seat -->
            <LinearLayout
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/priceSeat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp35000"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppin"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Garis Pemisah -->
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#FFFF"
            android:layout_marginTop="10dp"/>

        <!-- Isi Actual Pay Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <!-- Isi Actual Pay -->
            <LinearLayout
                android:layout_width="293dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/actualPay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Actual Pay"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppin"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>

            <!-- Isi Price Pay -->
            <LinearLayout
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pricePay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp35000"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppin"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Isi Payment Method -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Payment Method"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppin"/>

        <Spinner
            android:id="@+id/methodPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:backgroundTint="@color/abuterang"
            android:layout_marginBottom="10dp"
            />

<!--        Bank-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:background="@drawable/shape"
                    android:backgroundTint="@color/abuterang"
                    android:layout_marginRight="6dp">

                    <Spinner
                        android:id="@+id/spinBank"
                        android:layout_width="match_parent"
                        android:layout_height="450dp"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="175dp"
                android:layout_height="70dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/shape"
                    android:backgroundTint="@color/abuterang"
                    android:layout_marginLeft="4dp">

                    <EditText
                        android:id="@+id/accNumb"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/buttonPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/buttonshape"
            android:fontFamily="@font/poppin"
            android:text="Order Summary "
            android:textColor="@color/navy"
            android:textSize="14sp"
            app:backgroundTint="@color/emas" />
    </LinearLayout>
</ScrollView>
