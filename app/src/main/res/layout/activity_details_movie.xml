<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".DetailsMovie">

    <ImageView
        android:id="@+id/posterfilm1"
        android:layout_width="500dp"
        android:layout_height="345dp"
        android:src="@drawable/inimermed" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Judul Film"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppin"
        android:layout_below="@+id/posterfilm1"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Direktor"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppin"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/title"/>

    <RatingBar
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/director"
        android:layout_marginLeft="20dp"
        style="?android:attr/ratingBarStyleSmall"
        android:isIndicator="true" />

    <TextView
        android:id="@+id/categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/rating"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Short Storyline"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/categories"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ticket Price"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/description"
        android:background="@drawable/shape"
        android:backgroundTint="@color/abuterang"
        android:textColor="@color/black"
        android:fontFamily="@font/poppin"/>

    <Button
        android:id="@+id/GetTicket"
        android:layout_width="350dp"
        android:layout_marginTop="80dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonshape"
        android:fontFamily="@font/poppin"
        android:text="Get Ticket "
        android:textColor="@color/navy"
        android:textSize="14sp"
        android:backgroundTint="@color/emas"
        android:layout_below="@id/price"/>
</RelativeLayout>
